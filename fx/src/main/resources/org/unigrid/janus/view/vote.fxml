<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: linear-gradient(from 75px 75px to 200px 150px, #00001c, #000024);" stylesheets="@main.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.unigrid.janus.controller.VoteController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <Label style="-fx-text-fill: orange;" text="Unigrid Vote" textFill="#ee7722" textOverrun="CLIP" BorderPane.alignment="CENTER">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </top>
         <bottom>
            <HBox prefHeight="48.0" prefWidth="450.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblTitle" text="Label" textFill="#ee7711" />
                  <ProgressBar fx:id="pgbRatio" prefWidth="200.0" progress="0.0" />
               </children></HBox>
         </bottom>
         <center>
            <TableView fx:id="tblGoveData" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="tbcProposal" prefWidth="75.0" text="Proposal" />
                  <TableColumn fx:id="tbcVotes" prefWidth="75.0" text="Vots" />
                <TableColumn fx:id="tbcYes" prefWidth="75.0" />
                <TableColumn fx:id="tbcNo" prefWidth="75.0" />
                  <TableColumn fx:id="tbcAbstain" prefWidth="75.0" />
              </columns>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
