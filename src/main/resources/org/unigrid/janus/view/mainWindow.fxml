                                                                        <Image url="@images/unigrid-round_77x77.png" />
                                                                     </image>
                                                                     <effect>
                                                                        <Glow />
                                                                     </effect>
                                                                  </ImageView>
                                                                  <Button layoutX="70.0" layoutY="160.0" mnemonicParsing="false" prefWidth="100.0" style="-fx-background-radius: 50;" text="Send">
                                                                     <font>
                                                                        <Font size="18.0" />
                                                                     </font>
                                                                     <padding>
                                                                        <Insets bottom="1.0" top="1.0" />
                                                                     </padding>
                                                                  </Button>
                                                                  <Button layoutX="190.0" layoutY="160.0" mnemonicParsing="false" prefWidth="100.0" style="-fx-background-radius: 50;" text="Receive">
                                                                     <font>
                                                                        <Font size="18.0" />
                                                                     </font>
                                                                     <padding>
                                                                        <Insets bottom="1.0" top="1.0" />
                                                                     </padding>
                                                                  </Button>
                                                                  <FlowPane alignment="CENTER" layoutY="80.0">
                                                                     <children>
                                                                        <HBox alignment="BOTTOM_LEFT">
                                                                           <children>
                                                                              <Label fx:id="lblBalance" alignment="CENTER" style="-fx-text-fill: orange;" text="0" textAlignment="CENTER" textFill="#ee7722" textOverrun="CLIP" HBox.hgrow="ALWAYS">
                                                                                 <font>
                                                                                    <Font name="Arial" size="36.0" />
                                                                                 </font>
                                                                              </Label>
                                                                              <Label alignment="BOTTOM_RIGHT" contentDisplay="BOTTOM" text="UGD" textFill="#ffa033">
                                                                                 <font>
                                                                                    <Font size="18.0" />
                                                                                 </font>
                                                                              </Label>
                                                                           </children>
                                                                        </HBox>
                                                                     </children>
                                                                  </FlowPane>
                                                               </children>
                                                               <padding>
                                                                  <Insets bottom="8.0" />
                                                               </padding>
                                                            </Pane>
                                                         </children>
                                                      </FlowPane>
                                                   </children>
                                                </AnchorPane>
                                                <AnchorPane VBox.vgrow="ALWAYS">
                                                   <children>
                                                      <TableView fx:id="tblWalletTrans" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                                                        <columns>
                                                          <TableColumn fx:id="colWalletTransDate" minWidth="100.0" prefWidth="130.0" sortType="DESCENDING" text="Date" />
                                                            <TableColumn fx:id="colWalletTransType" prefWidth="75.0" text="Type" />
                                                            <TableColumn fx:id="colWalletTransAmount" prefWidth="75.0" text="Amount" />
                                                          <TableColumn fx:id="colWalletTransAddress" prefWidth="170.0" text="Address" />
                                                        </columns>
                                                      </TableView>
                                                      <Label alignment="TOP_CENTER" layoutX="216.0" layoutY="6.0" text="Recent Transactions" textAlignment="CENTER" textFill="#aaaadd" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="3.0">
                                                         <font>
                                                            <Font size="18.0" />
                                                         </font>
                                                      </Label>
                                                   </children>
                                                </AnchorPane>
                                             </children>
                                          </VBox>
                                          <VBox fx:id="pnlTransactions" prefHeight="200.0" prefWidth="100.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <TableView fx:id="tblTransactions" VBox.vgrow="ALWAYS">
                                                  <columns>
                                                    <TableColumn fx:id="colTransDate" prefWidth="130.0" sortType="DESCENDING" text="Date" />
                                                      <TableColumn fx:id="colTransType" prefWidth="85.0" text="Type" />
                                                      <TableColumn fx:id="colTransAmount" prefWidth="75.0" text="Amount" />
                                                    <TableColumn fx:id="colTransAddress" prefWidth="170.0" text="Address" />
                                                  </columns>
                                                </TableView>
                                             </children>
                                          </VBox>
                                          <VBox fx:id="pnlNodes" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <FlowPane alignment="CENTER" columnHalignment="CENTER" VBox.vgrow="ALWAYS">
                                                   <children>
                                                      <Label text="Nodes" textFill="#ff8b2d">
                                                         <font>
                                                            <Font size="48.0" />
                                                         </font>
                                                      </Label>
                                                   </children>
                                                </FlowPane>
                                             </children>
                                          </VBox>
                                       </children></AnchorPane>
                              </content>
                            </Tab>
                            <Tab text="Debug">
                              <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                       <children>
                                          <ListView fx:id="lstDebug" layoutX="6.0" layoutY="7.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
                                       </children>
                                    </AnchorPane>
                              </content>
                            </Tab>
                          </tabs>
                        </TabPane>
                     </center>
                  </BorderPane>
                  <fx:include source="component/windowBorder.fxml" />
               </children>
            </StackPane>
         </root>
      </Scene>
   </scene>
</Stage>
