                                          <Insets bottom="2.0" />
                                       </VBox.margin>
                                       <padding>
                                          <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                       </padding>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </ToggleButton>
                                 </children>
                                 <padding>
                                    <Insets right="-1.0" top="29.0" />
                                 </padding>
                              </VBox>
                           </center>
                           <bottom>
                              <FlowPane alignment="CENTER" columnHalignment="CENTER" prefWidth="140.0" style="-fx-border-color: transparent #ccc8 transparent transparent;" BorderPane.alignment="CENTER">
                                 <children>
                                    <Label text="0.1.0" textFill="#ffa621" />
                                 </children>
                                 <BorderPane.margin>
                                    <Insets />
                                 </BorderPane.margin>
                              </FlowPane>
                           </bottom>
                        </BorderPane>
                     </left>
                     <opaqueInsets>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </opaqueInsets>
                     <center>
                        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                          <tabs>
                            <Tab text="Main">
                              <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 200px 25px to 0px 100px, #2235, #1125);">
