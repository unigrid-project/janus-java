<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<Stage title="Unigrid Janus Wallet" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <scene>
      <Scene fill="#000024">
         <root>
            <StackPane>
               <children>
                  <BorderPane pickOnBounds="false" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(from 75px 75px to 200px 150px, #00001c, #000024);">
                     <top>
                        <fx:include source="component/windowBar.fxml" />
                     </top>
                     <left>
                        <VBox spacing="25.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" prefWidth="140.0" style="-fx-border-color: red; -fx-background-color: transparent; -fx-background-color:hover: white;" styleClass="sdsds" text="Overview" textAlignment="JUSTIFY">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <padding>
                                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                 </padding>
                              </Button>
                              <Button mnemonicParsing="false" prefWidth="140.0" text="Transactions">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                 </padding>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                           </padding>
                        </VBox>
                     </left>
                     <opaqueInsets>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </opaqueInsets>
                  </BorderPane>
                  <fx:include source="component/windowBorder.fxml" />
               </children>
            </StackPane>
         </root>
      </Scene>
   </scene>
</Stage>
