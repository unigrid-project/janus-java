<Stage onShown="#onShown" title="Unigrid Janus Wallet" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.unigrid.janus.controller.view.MainWindowController">
   <scene>
      <Scene fill="#000024" stylesheets="@main.css">
         <root>
            <StackPane>
               <children>
                  <BorderPane pickOnBounds="false" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(from 75px 75px to 200px 150px, #00001c, #000024);">
                     <top>
                        <fx:include source="component/windowBar.fxml" />
                     </top>
                     <left>
                        <BorderPane BorderPane.alignment="CENTER">
                           <center>
                              <VBox styleClass="sidebar">
                                 <children>
                                    <ToggleButton fx:id="btnWallet" mnemonicParsing="false" onMouseClicked="#onWalletTap" prefWidth="140.0" selected="true" text="Wallet">
                                       <padding>
                                          <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                       </padding>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                       <toggleGroup>
                                          <ToggleGroup fx:id="sidepane" />
                                       </toggleGroup>
                                       <VBox.margin>
                                          <Insets bottom="2.0" />
                                       </VBox.margin>
                                    </ToggleButton>
                                    <ToggleButton fx:id="btnTransactions" mnemonicParsing="false" onMouseClicked="#onTransactionsTap" prefWidth="140.0" text="Transactions" toggleGroup="$sidepane">
                                       <padding>
                                          <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                       </padding>
                                       <VBox.margin>
                                          <Insets bottom="2.0" />
                                       </VBox.margin>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </ToggleButton>
                                    <ToggleButton fx:id="btnNodes" mnemonicParsing="false" onMouseClicked="#onNodesTap" prefWidth="140.0" text="Nodes" toggleGroup="$sidepane">
