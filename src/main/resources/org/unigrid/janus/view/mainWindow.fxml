                                                            <Pane styleClass="h-centered">
                                                               <children>
                                                                  <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="142.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" scaleX="0.5" scaleY="0.5" translateX="-37.5" translateY="-37.5">
